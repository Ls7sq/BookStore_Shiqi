<div class="card-deck">
    @foreach (var book in Model)
    {
        var photoPath = "~/images/" + (book.Image ?? "2.png");

        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h4>@book.Name</h4>
            </div>

            <div class="card-body">
                <img class="card-img-top imagThumbnail" src=@photoPath
                     asp-append-version="true" />
                <p>Description : @book.Desc</p>
                <p>Price : @book.UnitPrice</p>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="add" asp-route-id="@book.Id"
                   class="btn btn-primary m-1">Add to Cart</a>

            </div>
        </div>
    }
</div>